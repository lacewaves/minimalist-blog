<div class="form">
<%= form_for @post do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %><em><%= @post.errors[:title].join(", ") %></em>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_field :body %><em><%= @post.errors[:body].join(", ") %></em>
  </div>

  <div class="formbuttons">
    <%= f.submit %> or <%= link_to 'Delete', "/post/#{@post.id}", method: :delete, data: {confirm: "Are you sure?"} %>
  </div>

<% end %>
</div>
